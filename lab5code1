    <title>Сума непарних чисел</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }
        .container {
            background-color: #f5f5f5;
            padding: 20px;
            border-radius: 10px;
        }
        input {
            padding: 10px;
            font-size: 16px;
            width: 100px;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .result {
            margin-top: 20px;
            padding: 15px;
            background-color: #e9ecef;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Сума N непарних чисел</h1>
        
        <div>
            <input type="number" id="numberInput" placeholder="Введіть N" min="1" value="5">
            <button onclick="calculateSum()">Обчислити</button>
        </div>
        
        <div id="result" class="result"></div>
    </div>

    <script>
        function sumOddNumbers(n) {
            if (n === 1) {
                return 1;
            }
            
            const currentOdd = 2 * n - 1;
            return currentOdd + sumOddNumbers(n - 1);
        }

        function calculateSum() {
            const input = document.getElementById('numberInput');
            const resultDiv = document.getElementById('result');
            const n = parseInt(input.value);
            
            if (isNaN(n) || n < 1) {
                resultDiv.textContent = 'Будь ласка, введіть натуральне число!';
                return;
            }
            
            const sum = sumOddNumbers(n);
            resultDiv.textContent = `Сума перших ${n} непарних чисел: ${sum}`;
        }

        document.getElementById('numberInput').addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                calculateSum();
            }
        });
    </script>
</body>
</html>
