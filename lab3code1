<body>
    <div class="container">
        <h1>Визначення положення точки відносно графіка y=x³</h1>

        <div class="input-group">
            <label for="x">Координата X:</label>
            <input type="number" id="x" step="any" placeholder="Введіть координату x">
        </div>
        <div class="input-group">
            <label for="y">Координата Y:</label>
            <input type="number" id="y" step="any" placeholder="Введіть координату y">
        </div>
        <button onclick="checkPointPosition()">Перевірити положення точки</button>
        <div id="result" class="result"></div>
    </div>
    <script>
        function checkPointPosition() {
            const x = parseFloat(document.getElementById('x').value);
            const y = parseFloat(document.getElementById('y').value);
            const resultElement = document.getElementById('result');
            if (isNaN(x) || isNaN(y)) {
                resultElement.textContent = "Будь ласка, введіть коректні числові значення для обох координат!";
                resultElement.className = "result below-graph";
                return;
            }
            const functionValue = Math.pow(x, 3);
            let position;
            let cssClass;
            if (Math.abs(y - functionValue) < 0.000001) {
                position = "на графіку функції y=x³";
                cssClass = "on-graph";
            } else if (y > functionValue) {
                position = "вище графіка функції y=x³";
                cssClass = "above-graph";
            } else {
                position = "нижче графіка функції y=x³";
                cssClass = "below-graph";
            }
            resultElement.textContent = `Точка N(${x}; ${y}) знаходиться ${position}. Значення функції в точці x=${x}: y=${functionValue.toFixed(4)}`;
            resultElement.className = "result " + cssClass;
        }
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('x').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    checkPointPosition();
                }
            });
            document.getElementById('y').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    checkPointPosition();
                }
            });
        });
    </script>
</body>
