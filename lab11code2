<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Округлення чисел</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
        }
        input {
            padding: 10px;
            font-size: 16px;
            width: 200px;
            margin-right: 10px;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .result {
            margin-top: 20px;
            padding: 15px;
            background-color: #e9ecef;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div>
        <input type="number" step="0.001" id="numberInput" placeholder="Введіть число (3 знаки після коми)">
        <button onclick="roundNumber()">Округлити</button>
    </div>
    <div id="result" class="result"></div>
    <script>
        function roundNumber() {
            const input = document.getElementById('numberInput');
            const resultDiv = document.getElementById('result');
            const number = parseFloat(input.value);
            if (isNaN(number)) {
                resultDiv.textContent = 'Будь ласка, введіть коректне число';
                return;
            }
            const roundedHundredths = Math.round(number * 100) / 100;
            const roundedTenths = Math.round(number * 10) / 10;
            const roundedInteger = Math.round(number);
            resultDiv.innerHTML = `
                <strong>Вхідне число:</strong> ${number}<br>
                <strong>Округлення до сотих:</strong> ${roundedHundredths}<br>
                <strong>Округлення до десятих:</strong> ${roundedTenths}<br>
                <strong>Округлення до цілих:</strong> ${roundedInteger}
            `;
        }
        document.getElementById('numberInput').addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                roundNumber();
            }
        });
    </script>
</body>
</html>
