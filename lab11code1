<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Date Object</title>
</head>
<body>
    <button onclick="startCountdown()">Натисніть мене</button>
    <script>
        function startCountdown() {
            setTimeout(() => {
                const now = new Date();
                const dateTimeString = now.toLocaleString('uk-UA');
                alert(`Поточна дата і час: ${dateTimeString}`);
                window.close();
            }, 19000);
        }
    </script>
</body>
</html>
