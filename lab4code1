    <script>
        function isPrime(number) {
            if (number <= 1 || !Number.isInteger(number)) {
                return false;
            }
            if (number === 2) {
                return true;
            }
            if (number % 2 === 0) {
                return false;
            }
            for (let i = 3; i <= Math.sqrt(number); i += 2) {
                if (number % i === 0) {
                    return false;
                }
            }
            
            return true;
        }
        function checkNumber() {
            const input = document.getElementById('numberInput');
            const resultDiv = document.getElementById('result');
            const number = parseInt(input.value);
            if (isNaN(number) || number < 1) {
                resultDiv.textContent = 'Пожалуйста, введите натуральное число!';
                resultDiv.className = 'result not-prime';
                return;
            }
            if (isPrime(number)) {
                resultDiv.textContent = `Число ${number} - ПРОСТОЕ`;
                resultDiv.className = 'result prime';
            } else {
                resultDiv.textContent = `Число ${number} - НЕ ПРОСТОЕ`;
                resultDiv.className = 'result not-prime';
            }
        }
        document.getElementById('numberInput').addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                checkNumber();
            }
        });
        window.onload = demonstrateFunction;
    </script>
