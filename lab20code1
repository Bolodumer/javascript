<body>
    <div class="container">
        <h2>Асинхронна функція з Promise</h2>
        <button onclick="runAsyncFunction()">Запустити асинхронну функцію</button>
        
        <div id="result" class="result"></div>
    </div>
    <script>
        async function asyncFunction() {
            return new Promise((resolve) => {
                setTimeout(() => {
                    resolve("Проміс виконано успішно через 10 секунд!");
                }, 10000);
            });
        }
        async function runAsyncFunction() {
            const resultDiv = document.getElementById('result');
            resultDiv.innerHTML = "Функція запущена... Чекаємо 10 секунд";
            resultDiv.className = 'result loading';
            try {
                const result = await asyncFunction();
                resultDiv.innerHTML = result;
                resultDiv.className = 'result';
            } catch (error) {
                resultDiv.innerHTML = "Сталася помилка: " + error.message;
                resultDiv.className = 'result';
            }
        }
    </script>
</body>
