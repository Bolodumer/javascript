<body>
    <div class="container">
        <h2>Робота з Cookies</h2>
        <div>
            <input type="number" id="yearInput" placeholder="Введіть рік вступу" min="2000" max="2030">
            <button onclick="saveYearToCookie()">Зберегти рік в cookie</button>
        </div>
        <div>
            <button onclick="readYearFromCookie()">Прочитати рік з cookie</button>
        </div>
    </div>
    <script>
        function saveYearToCookie() {
            const year = document.getElementById('yearInput').value.trim();
            if (year === '') {
                alert('Будь ласка, введіть рік вступу');
                return;
            }
            if (year < 2000 || year > 2030) {
                alert('Будь ласка, введіть коректний рік (2000-2030)');
                return;
            }
            const expirationDate = new Date();
            expirationDate.setDate(expirationDate.getDate() + 365);
            document.cookie = `universityYear=${year}; expires=${expirationDate.toUTCString()}; path=/`;
            alert(`Рік вступу ${year} збережено в cookie`);
            document.getElementById('yearInput').value = '';
        }
        function readYearFromCookie() {
            const cookies = document.cookie.split(';');
            let universityYear = null;
            for (let cookie of cookies) {
                cookie = cookie.trim();
                if (cookie.startsWith('universityYear=')) {
                    universityYear = cookie.substring('universityYear='.length);
                    break;
                }
            }
            if (universityYear) {
                console.log(`Рік вступу в університет: ${universityYear}`);
                alert(`Рік вступу в університет: ${universityYear}`);
            } else {
                console.log('Рік вступу не знайдено в cookie');
                alert('Рік вступу не знайдено в cookie');
            }
        }
        document.getElementById('yearInput').addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                saveYearToCookie();
            }
        });
    </script>
</body>
</html>
