<body>
    <div class="container">
        <h2>Список MIME типів, які підтримує браузер</h2>
        <div>
            <input type="text" id="urlInput" placeholder="Введіть адресу веб-сторінки">
        </div>
        <div>
            <button onclick="showMimeTypes()">Показати MIME типи</button>
            <button onclick="clearResults()">Очистити результати</button>
        </div>
        <div id="result" class="result"></div>
    </div>
    <script>
        function showMimeTypes() {
            const resultDiv = document.getElementById('result');
            const urlInput = document.getElementById('urlInput').value.trim();
            if (urlInput && !isValidUrl(urlInput)) {
                resultDiv.innerHTML = 'Будь ласка, введіть коректну URL адресу';
                return;
            }
            const mimeTypes = navigator.mimeTypes;
            let mimeList = '';
            if (mimeTypes && mimeTypes.length > 0) {
                mimeList += `<h3>Браузер підтримує ${mimeTypes.length} MIME типів:</h3>`;
                for (let i = 0; i < mimeTypes.length; i++) {
                    const mimeType = mimeTypes[i];
                    mimeList += `
                        <div class="mime-item">
                            <strong>${mimeType.type}</strong><br>
                            Опис: ${mimeType.description || 'Немає опису'}<br>
                            Розширення: ${mimeType.suffixes || 'Немає розширень'}
                        </div>
                    `;
                }
            } else {
                mimeList = 'Не вдалося отримати список MIME типів або браузер не підтримує цю функцію';
            }
            resultDiv.innerHTML = mimeList;
        }
        function clearResults() {
            document.getElementById('result').innerHTML = '';
            document.getElementById('urlInput').value = '';
        }
        function isValidUrl(string) {
            try {
                new URL(string);
                return true;
            } catch (_) {
                return false;
            }
        }
        document.getElementById('urlInput').addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                showMimeTypes();
            }
        });
    </script>
</body>
</html>
