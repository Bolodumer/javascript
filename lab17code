<body>
    <div class="container">
        <h2>Обчислення центра кола та площі круга</h2>
        <p>Відрізок AB є діаметром кола</p>
        <form id="circleForm">
            <div class="input-group">
                <label>Координата x точки A:</label>
                <input type="number" id="xA" step="any" required>
            </div>
            <div class="input-group">
                <label>Координата y точки A:</label>
                <input type="number" id="yA" step="any" required>
            </div>
            <div class="input-group">
                <label>Координата x точки B:</label>
                <input type="number" id="xB" step="any" required>
            </div>
            <div class="input-group">
                <label>Координата y точки B:</label>
                <input type="number" id="yB" step="any" required>
            </div>
            <button type="button" onclick="calculateCircle()">Обчислити</button>
        </form>
        <div class="result">
            <label>Результати:</label>
            <textarea id="resultOutput" readonly></textarea>
        </div>
    </div>
    <script>
        function calculateCircle() {
            const xA = parseFloat(document.getElementById('xA').value);
            const yA = parseFloat(document.getElementById('yA').value);
            const xB = parseFloat(document.getElementById('xB').value);
            const yB = parseFloat(document.getElementById('yB').value);
            const centerX = (xA + xB) / 2;
            const centerY = (yA + yB) / 2;
            const diameter = Math.sqrt(Math.pow(xB - xA, 2) + Math.pow(yB - yA, 2));
            const radius = diameter / 2;
            const area = Math.PI * Math.pow(radius, 2);
            const result = `Координати центра кола: (${centerX.toFixed(2)}, ${centerY.toFixed(2)})
Довжина діаметра: ${diameter.toFixed(2)}
Радіус кола: ${radius.toFixed(2)}
Площа круга: ${area.toFixed(2)}`;
            document.getElementById('resultOutput').value = result;
        }
    </script>
