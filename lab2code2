<body>
    <div class="container">
        <h1>Обчислення функції f(x)</h1>
        <button onclick="calculateFunction()" class="calculate-btn">Обчислити функцію</button>
        <div id="result" class="result-container">
            <div class="result-item">Тут буде показано результат обчислень</div>
        </div>
    </div>

    <script>
        function calculateFunction() {
            let xInput = prompt("Введіть значення x для обчислення функції:\nf(x) = √|x-4| + cos(x) + 3");
            if (xInput === null) {
                displayResult("Операцію скасовано користувачем", true);
                return;
            }
            let x = parseFloat(xInput);
            if (isNaN(x)) {
                displayResult("Помилка: Будь ласка, введіть коректне числове значення!", true);
                return;
            }
            try {
                let absoluteValue = Math.abs(x - 4);
                let sqrtValue = Math.sqrt(absoluteValue);
                let cosValue = Math.cos(x);
                let result = sqrtValue + cosValue + 3;
                
                // Відображення результату
                displayCalculation(x, absoluteValue, sqrtValue, cosValue, result);
                
            } catch (error) {
                displayResult(`Помилка обчислення: ${error.message}`, true);
            }
        }
        function displayCalculation(x, absoluteValue, sqrtValue, cosValue, result) {
            const resultContainer = document.getElementById('result');
            
            resultContainer.innerHTML = `
                <div class="formula">f(x) = √|x-4| + cos(x) + 3</div>
                
                <div class="result-item">
                    <strong>Вхідні дані:</strong>
                    <div class="result-value">x = ${x}</div>
                </div>
                
                <div class="result-item">
                    <strong>Проміжні обчислення:</strong>
                    <div>|x-4| = |${x}-4| = ${absoluteValue.toFixed(4)}</div>
                    <div>√|x-4| = √${absoluteValue.toFixed(4)} = ${sqrtValue.toFixed(4)}</div>
                    <div>cos(${x}) = ${cosValue.toFixed(4)}</div>
                </div>
                
                <div class="result-item">
                    <strong>Результат обчислення:</strong>
                    <div class="result-value">f(${x}) = ${sqrtValue.toFixed(4)} + ${cosValue.toFixed(4)} + 3 = ${result.toFixed(4)}</div>
                </div>
                
                <div class="result-item">
                    <strong>Округлений результат:</strong>
                    <div class="result-value">f(${x}) ≈ ${Math.round(result * 100) / 100}</div>
                </div>
            `;
        }
        function displayResult(message, isError = false) {
            const resultContainer = document.getElementById('result');
            
            if (isError) {
                resultContainer.innerHTML = `<div class="error">${message}</div>`;
            } else {
                resultContainer.innerHTML = `<div class="result-item">${message}</div>`;
            }
        }
        function showInstructions() {
            alert("Інструкція:\n1. Натисніть кнопку 'Обчислити функцію'\n2. Введіть числове значення x\n3. Перегляньте результат на сторінці");
        }
        window.addEventListener('load', function() {
            console.log("Сторінка завантажена. Готово до обчислень!");
        });
    </script>
</body>
